{
    "version": 1,
    "supportedProjectTypes": [ "CMakeProjectManager.CMakeProject", "Qbs.QbsProject", "Qt4ProjectManager.Qt4Project" ],
    "id": "E.MiloWizard",
    "category": "F.MiloApplication",
    "trDescription": "Creates a project containing a single main.cpp file with a stub implementation.\n\nPreselects a desktop Qt for building the application if available.",
    "trDisplayName": "Milo Wizard",
    "trDisplayCategory": "MILO Application",
    "icon": "../../global/consoleapplication.png",
    "featuresRequired": [ "QtSupport.Wizards.FeatureQt" ],
    "enabled": "%{JS: [ %{Plugins} ].indexOf('QmakeProjectManager') >= 0 || [ %{Plugins} ].indexOf('QbsProjectManager') >= 0 || [ %{Plugins} ].indexOf('CMakeProjectManager') >= 0}",

    "options":
    [
        { "key": "ProjectFile", "value": "%{JS: '%{BuildSystem}' === 'qmake' ? '%{ProFile}' : ('%{BuildSystem}' === 'cmake' ? '%{CMakeFile}' : '%{QbsFile}')}" },
        { "key": "ProFile", "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}" },
        { "key": "QbsFile", "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'qbs')}" },
        { "key": "CMakeFile", "value": "%{ProjectDirectory}/CMakeLists.txt" },
        { "key": "CppFileName", "value": "%{JS: 'main.' + Util.preferredSuffix('text/x-c++src')}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Project Location",
            "trShortTitle": "Location",
            "typeId": "Project",
            "data": { "trDescription": "This wizard creates a simple Qt-based console application." }
        },
        {
            "trDisplayName": "Kit Selection",
            "trShortTitle": "Kits",
            "typeId": "Kits",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data": { "projectFilePath": "%{ProjectFile}" }
        },
        {
            "trDisplayName": "Select Required Project Templates",
            "trShortTitle": "Project Templates",
            "typeId": "Fields",
            "data": [
                {
                    "name": "NewProjectTemplateChB",
                    "trDisplayName": "New Project Template",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "NewProjectTemplateChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "PlatformSupportLbl",
                    "type": "Label",
                    "enabled": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}",
                    "data": {
                        "wordWrap": true,
                        "trText": "Platform support:"
                    }
                },
                {
                    "name": "AndroidChB",
                    "trDisplayName": "Android",
                    "type": "CheckBox",
                    "enabled": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}",
                    "data": {
                        "checkedValue": "AndroidChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MacChB",
                    "trDisplayName": "Mac",
                    "type": "CheckBox",
                    "enabled": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}",
                    "data": {
                        "checkedValue": "MacChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "WindowsChB",
                    "trDisplayName": "Windows",
                    "type": "CheckBox",
                    "enabled": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}",
                    "data": {
                        "checkedValue": "WindowsChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "Spcr1",
                    "type": "Spacer",
                    "data": {
                        "factor": 3
                    }
                },
                {
                    "name": "MConfigChB",
                    "trDisplayName": "Include MConfig",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MConfigChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MChartsChB",
                    "trDisplayName": "Include MCharts",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MChartsChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MLogChB",
                    "trDisplayName": "Include MLog",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MLogChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MRestAPIChB",
                    "trDisplayName": "Include MRestAPI",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MRestAPIChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MSentryChB",
                    "trDisplayName": "Include MSentry",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MSentryChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MCryptoChB",
                    "trDisplayName": "Include MCrypto",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MCryptoChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MBarcodeScannerChB",
                    "trDisplayName": "Include MBarcodeScanner",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MBarcodeScannerChBChecked",
                        "uncheckedValue": ""
                    }
                },
                {
                    "name": "MScriptsChB",
                    "trDisplayName": "Include MScripts",
                    "type": "CheckBox",
                    "data": {
                        "checkedValue": "MScriptsChBChecked",
                        "uncheckedValue": ""
                    }
                }
            ]
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "doc/branding",
					"isBinary": true
                },
                {
                    "source": "packages/com.milosolutions.mbarcodescanner/data/milo/mbarcodescanner",
                    "target": "milo/mbarcodescanner",
					"isBinary": true,
                    "condition": "%{JS: '%{MBarcodeScannerChB}' === 'MBarcodeScannerChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.mcharts/data/milo/mcharts",
                    "target": "milo/mcharts",
					"isBinary": true,
                    "condition": "%{JS: '%{MChartsChB}' === 'MChartsChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.mconfig/data/milo/mconfig",
                    "target": "milo/mconfig",
					"isBinary": true,
                    "condition": "%{JS: '%{MConfigChB}' === 'MConfigChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.mlog/data/milo/mlog",
                    "target": "milo/mlog",
					"isBinary": true,
                    "condition": "%{JS: '%{MLogChB}' === 'MLogChBChecked'}"
                },
				{
                    "source": "packages/com.milosolutions.mlog/data/milo/mlog/.git",
                    "condition": false
                },
                {
                    "source": "packages/com.milosolutions.mrestapi/data/milo/mrestapi",
                    "target": "milo/mrestapi",
					"isBinary": true,
                    "condition": "%{JS: '%{MRestAPIChB}' === 'MRestAPIChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.mcrypto/data/milo/mcrypto",
                    "target": "milo/mcrypto",
					"isBinary": true,
                    "condition": "%{JS: '%{MCryptoChB}' === 'MCryptoChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.mscripts/data/milo/mscripts",
                    "target": "milo/mscripts",
					"isBinary": true,
                    "condition": "%{JS: '%{MScriptsChB}' === 'MScriptsChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.msentry/data/milo/msentry",
                    "target": "milo/msentry",
					"isBinary": true,
                    "condition": "%{JS: '%{MSentryChB}' === 'MSentryChBChecked'}"
                },
				{
                    "source": "README.md",
                    "target": "README.md",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/gitignore.example",
                    "target": ".gitignore",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/gitlab-ci.yml.example",
                    "target": ".gitlab-ci.yml",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/AUTHORS.md",
                    "target": "AUTHORS.md",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
				{
                    "source": "packages/com.milosolutions.newprojecttemplate/data/version.pri",
                    "target": "version.pri",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
				{
                    "source": "packages/com.milosolutions.newprojecttemplate/data/.clang-format",
                    "target": ".clang-format",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
				{
                    "source": "packages/com.milosolutions.newprojecttemplate/data/.git",
                    "target": ".git",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/LICENSE-MiloCodeDB.txt",
                    "target": "LICENSE-MiloCodeDB.txt",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/license-Qt.txt",
                    "target": "license-Qt.txt",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/newprojecttemplate.doxyfile",
                    "target": "%{ProjectName}.doxyfile",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "project.pro",
                    "target": "%{ProFile}",
                    "openAsProject": true
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/platforms/android/android.pri",
                    "target": "%{ProjectName}/platforms/android/android.pri",
					"isBinary": true,
                    "condition": "%{JS: '%{AndroidChB}' === 'AndroidChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/platforms/mac/mac.pri",
                    "target": "%{ProjectName}/platforms/mac/mac.pri",
					"isBinary": true,
                    "condition": "%{JS: '%{MacChB}' === 'MacChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/platforms/windows/windows.pri",
                    "target": "%{ProjectName}/platforms/windows/windows.pri",
					"isBinary": true,
                    "condition": "%{JS: '%{WindowsChB}' === 'WindowsChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/template.pro",
                    "target": "%{ProjectName}/%{ProjectName}.pro",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/qml",
                    "target": "%{ProjectName}/qml",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/resources",
                    "target": "%{ProjectName}/resources",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/template/src",
                    "target": "%{ProjectName}/src",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/README.md",
                    "target": "README.md",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/Release.md",
                    "target": "Release.md",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/tst_project",
                    "target": "tests/tst_project",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/helpers",
                    "target": "tests/helpers",
					"isBinary": true,
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/Readme-tests.md",
                    "target": "tests/Readme-tests.md",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/testConfig.pri",
                    "target": "tests/testConfig.pri",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/tests.pro",
                    "target": "tests/tests.pro",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/tst_project/tst_project.pro",
                    "target": "tests/tst_project/tst_project.pro",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                },
                {
                    "source": "packages/com.milosolutions.newprojecttemplate/data/tests/tst_project/tst_template.cpp",
                    "target": "tests/tst_project/tst_%{ProjectName}.cpp",
                    "condition": "%{JS: '%{NewProjectTemplateChB}' === 'NewProjectTemplateChBChecked'}"
                }
            ]
        }
    ]
}
